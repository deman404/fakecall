<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7FC"
    >

    <RelativeLayout
        android:id="@+id/relativeTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@color/send_msg"
        android:gravity="center">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/backk" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="@string/setting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeTop"
        android:background="#F8F7FC"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_above="@+id/adView"
        android:layout_marginTop="@dimen/_5sdp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:clipToPadding="false">
        
        <LinearLayout
            android:orientation="vertical"
            android:background="#F8F7FC"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:elevation="1dp" android:orientation="horizontal"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/rectangle_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle"
                    android:padding="12dp"
                    android:id="@+id/musicimage"
                    android:src="@drawable/ic_about_app" />
                <View
                    android:layout_width="6dp"
                    android:layout_margin="10sp"
                    android:background="@color/colorPrimary"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:text="Application Name"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/app_name"
                        android:id="@+id/app_name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:elevation="1dp" android:orientation="horizontal"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/rectangle_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle"
                    android:padding="12dp"
                    android:src="@drawable/ic_about_version" />
                <View
                    android:layout_width="6dp"
                    android:layout_margin="10sp"
                    android:background="@color/colorPrimary"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:text="Build Version"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Version 1.0.1"
                        android:id="@+id/version_name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:elevation="1dp" android:orientation="horizontal"
                android:layout_marginEnd="5dp"
                android:id="@+id/about_rate"
                android:layout_marginStart="5dp"
                android:background="@drawable/rectangle_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle"
                    android:padding="12dp"
                    android:src="@drawable/ic_about_rate" />
                <View
                    android:layout_width="6dp"
                    android:layout_margin="10sp"
                    android:background="@color/colorPrimary"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:text="Rate us"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Please support us with your positive review"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:elevation="1dp" android:orientation="horizontal"
                android:layout_marginEnd="5dp"
                android:id="@+id/about_share"
                android:layout_marginStart="5dp"
                android:background="@drawable/rectangle_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle"
                    android:padding="12dp"
                    android:src="@drawable/ic_about_share" />
                <View
                    android:layout_width="6dp"
                    android:layout_margin="10sp"
                    android:background="@color/colorPrimary"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:text="Share It"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Share our app with your friends and family"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/frame_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:elevation="1dp" android:orientation="horizontal"
                android:layout_marginEnd="5dp"
                android:id="@+id/about_moreapps"
                android:layout_marginStart="5dp"
                android:background="@drawable/rectangle_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle"
                    android:padding="12dp"
                    android:src="@drawable/ic_about_share" />
                <View
                    android:layout_width="6dp"
                    android:layout_margin="10sp"
                    android:background="@color/colorPrimary"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:text="More Apps"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Check our other apps on store"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:elevation="1dp" android:orientation="horizontal"
                android:layout_marginEnd="5dp"
                android:id="@+id/about_contact"
                android:layout_marginStart="5dp"
                android:background="@drawable/rectangle_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle"
                    android:padding="12dp"
                    android:src="@drawable/ic_about_contact" />
                <View
                    android:layout_width="6dp"
                    android:layout_margin="10sp"
                    android:background="@color/colorPrimary"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:text="Contact us"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Help us to improve our application"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_marginTop="20sp"
                android:elevation="1dp" android:orientation="horizontal"
                android:layout_marginEnd="5dp"
                android:id="@+id/about_privacy"
                android:layout_marginStart="5dp"
                android:background="@drawable/rectangle_white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/circle"
                    android:padding="12dp"
                    android:src="@drawable/ic_about_privacy" />
                <View
                    android:layout_width="6dp"
                    android:layout_margin="10sp"
                    android:background="@color/colorPrimary"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:text="Privacy Policy"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Please Check our privacy policy here"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        



        </LinearLayout>

    </ScrollView>



    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        tools:ignore="RtlHardcoded">
    </RelativeLayout>


</RelativeLayout>
